<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalhomework">
    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAG" /> <!-- 在SDCard中创建与删除文件权限 -->
    <permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstPageActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity android:name=".MainActivity" android:theme="@style/AppBaseTheme" android:exported="true">

        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".RegisterReadActivity"
            android:exported="true"
            android:theme="@style/AppBaseTheme" />
        <activity
            android:name=".RegisterWriteActivity"
            android:exported="true"
            android:theme="@style/AppBaseTheme" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/AppBaseTheme" />
        <activity android:name=".LaunchImproveActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingCartProActivity"
            android:exported="true"
            android:theme="@style/AppBaseTheme" />
        <activity
            android:name=".ShoppingDetailActivity"
            android:exported="true"
            android:theme="@style/AppBaseTheme" />
        <activity
            android:name=".TabHostActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".ShoppingListActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
    </application>

</manifest>